{
	"compileOnSave": true,
	"compilerOptions": {
		"outDir": "dist",
		"target": "ES2022",
		"allowJs": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}